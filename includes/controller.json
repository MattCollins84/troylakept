    {
        "regex": "^/admin/contacts$",
        "controllerClass": "AdminController",
        "method": "renderContacts",
        "authentication": "adminOnly" 
    },
    {
        "regex": "^/admin/quotes$",
        "controllerClass": "QuoteController",
        "method": "renderQuotes",
        "authentication": "adminOnly" 
    },
    {
        "regex": "^/admin/quotes/add$",
        "controllerClass": "QuoteController",
        "method": "addQuote",
        "authentication": "adminOnly" 
    },
    {
        "regex": "^/admin/quotes/delete/[0-9]+$",
        "controllerClass": "QuoteController",
        "method": "deleteQuote",
        "authentication": "adminOnly" 
    }
  ]
}