{
  "controllers": [
    {
        "regex": "^/$",
        "controllerClass": "MainController",
        "method": "renderHomepage",
        "authentication": false 
    },
    {
        "regex": "^/results$",
        "controllerClass": "MainController",
        "method": "renderResults",
        "authentication": false 
    },
    {
        "regex": "^/services$",
        "controllerClass": "MainController",
        "method": "renderServices",
        "authentication": false 
    },
    {
        "regex": "^/signup$",
        "controllerClass": "MainController",
        "method": "doSignup",
        "authentication": false 
    },
    {
        "regex": "^/auth/login$",
        "controllerClass": "AuthenticationController",
        "method": "login",
        "authentication": false 
    },
    {
        "regex": "^/admin$",
        "controllerClass": "AdminController",
        "method": "renderLogin",
        "authentication": false 
    },
